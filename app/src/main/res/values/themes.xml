<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SendiAssignment" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/main_white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:actionBarWidgetTheme">@style/MainActionBarWidgetTheme</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MainActionBarWidgetTheme" parent="Theme.SendiAssignment">

        <item name="android:textColorHint">@color/off_white</item>
    </style>
</resources>